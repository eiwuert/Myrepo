<?xml version="1.0" encoding="UTF-8"?>
<phpunit>
	<testsuite name="ECash CRA Integration">
		<directory suffix="Test.php">.</directory>
	</testsuite>
	<filter>
		<whitelist>
			<directory>../code</directory>
		</whitelist>
		<blacklist>
			<directory>/virtualhosts/libolution</directory>
		</blacklist>
	</filter>
	<logging>
		<log type="coverage-html" target="../reports/cov" yui="true" highlight="true" />
		<log type="metrics-xml" target="../reports/metrics.xml" />
		<log type="pmd-xml" target="../reports/pmd.xml" cpdMinLines="5" cpdMinMatches="70" />
	</logging>
</phpunit>

